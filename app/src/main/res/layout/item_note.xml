<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/background_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66FF33">

        <TextView
            android:id="@+id/caller_name_text_view"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"
            android:text="Rohan" />

        <TextView
            android:id="@+id/caller_number_text_view"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/caller_name_text_view"
            android:maxLines="1"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:text="9891417273"
            android:textColor="#6000" />

        <TextView
            android:id="@+id/caller_note_text_text_view"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/caller_number_text_view"
            android:fontFamily="serif"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:text="Remind him at 8pm to pick up groceries" />

        <TextView
            android:id="@+id/call_time_text_view"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/caller_note_text_text_view"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingBottom="16dp"
            android:text="24 Jan, 17:02"
            android:textColor="#6000" />

    </RelativeLayout>

</android.support.v7.widget.CardView>